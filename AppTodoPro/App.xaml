<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AppTodoPro"
             xmlns:converters="clr-namespace:AppTodoPro.Converters"
             x:Class="AppTodoPro.App">
    <Application.Resources>
        <ResourceDictionary>
            <converters:CategoryIconConverter x:Key="CategoryIconConverter" />
            <converters:PriorityIconConverter x:Key="PriorityIconConverter" />
            <converters:CategoryColorConverter x:Key="CategoryColorConverter" />
            <converters:RatioToWidthConverter x:Key="RatioToWidthConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
